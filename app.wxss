/**app.wxss**/

page {
  height: 100%;
  font-size: 30rpx;
  line-height: 1.6;
  background: #F6F4F5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 



.gray-line-top {
  position: relative;
}
.gray-line-top::before {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  content: " ";
  transform: scaleY(.5);
  transform-origin: 50% 100%;
  background-color: #CCCCCC;
}

.gray-line-bottom {
  position: relative;
}
.gray-line-bottom::after {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  content: " ";
  transform: scaleY(.5);
  transform-origin: 50% 100%;
  background-color: #CCCCCC;
}

.right-arrow::after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}