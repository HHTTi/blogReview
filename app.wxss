/**app.wxss**/

page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
  background: #F6F4F5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 



.gray-line-top {
  position: relative;
}
.gray-line-top::before {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  content: " ";
  transform: scaleY(.5);
  transform-origin: 50% 100%;
  background-color: #999;
}

.gray-line-bottom {
  position: relative;
}
.gray-line-bottom::after {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  content: " ";
  transform: scaleY(.5);
  transform-origin: 50% 100%;
  background-color: #999;
}