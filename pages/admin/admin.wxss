/* pages/admin/admin.wxss */

.login {
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding: 56rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
}
.login_head {
    padding-top: 100rpx;
    padding-bottom: 50rpx;
    display: flex;
    justify-content: center;
}
.head_img {
    width: 200rpx;
    height: 200rpx;
}

.login_input {
    padding: 28rpx 0;
}

.login_btn {
    padding-top: 48rpx;
}
.login_btn button {
    color: #fff;
    background: #1890ff;
}

.list {
    padding: 28rpx 0;
    color: #6E6E6E
  }
  
  .item {
    margin-bottom: 28rpx;
    padding: 28rpx;
    background-color: #fff;
  }
  .item-head {
    padding-bottom: 28rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .item-body {
    padding-bottom: 28rpx;
  
  }
  .title {
    color: #1890FF;
  }
  
  .titles ,.texts, .likes ,.replys, .top {
    padding-top: 28rpx;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    color: #6E6E6E;
  }
  .likes {
    justify-content: flex-end;
  }
  .likes image {
    width: 65rpx;
    height: 37rpx;
  
  }
  .text, .like ,.reply {
    color:#212121;
  }
  
  .item-foot {
    display: flex;
    justify-content: space-between;
    padding-top: 18rpx;
  }
  .item-icon {
    display: flex;
    align-items: center;
    position: relative;
  }
  .item-foot image {
    width: 50rpx;
    height: 50rpx;
  }
  .item-icon-box {
      width: 100%;
      height: 100%;
      position: absolute;
      z-index: 3;
  }
  
  .nomsg {
    padding-top: 48rpx;
    text-align: center;
  
  }

  .author_reply {
      position: absolute;
      bottom: 0;
      z-index: 3;
      height: 0;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #fff;
      overflow: hidden;
      transition: all .2s linear;
  }

  .author_reply button {
    margin: 0;
    margin-left: 10rpx;
  }
  .show-input {
    height: 100%;
  }
  .reply-btns {
    display: flex;
    align-items: center;
    height: 100%;

  }
  .reply-btns button {
    max-height: 100%;
    display: inline-block;
    line-height: 2.3;
    font-size: 13px;

  }
  .reply-input {
      box-sizing: border-box;
      padding-left: 30rpx;
    width: 60%;
    height: 60rpx;
    display: flex;
    align-items: center;
    border-radius: 30rpx;
    background: #F6F4F5;
  }
  #send {
      background: #1890FF;
      color: #fff;
  }
  #cancel {
    background:#fff;
    color: #1890FF;
  }